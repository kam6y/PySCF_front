# PySCF_native_app Environment Configuration
# Copy this file to .env and adjust values for your environment

# =============================================================================
# Application Settings
# =============================================================================

# Debug mode (true/false)
PYSCF_FRONT_DEBUG=false

# Logging level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
PYSCF_FRONT_LOG_LEVEL=INFO

# Application theme (dark, light, auto)
PYSCF_FRONT_THEME=dark

# Application language (en, ja)
PYSCF_FRONT_LANGUAGE=en

# =============================================================================
# Database Configuration
# =============================================================================

# Database type (sqlite, mysql)
DB_TYPE=sqlite

# SQLite configuration (for development)
# Database file path (relative to project root)
DB_PATH=data/pyscf_front.db

# MySQL configuration (for production)
DB_HOST=localhost
DB_PORT=3306
DB_NAME=pyscf_front
DB_USER=pyscf_user
DB_PASSWORD=your_secure_password

# =============================================================================
# Calculation Engine Settings
# =============================================================================

# Maximum number of concurrent calculations
MAX_CONCURRENT_CALCULATIONS=2

# Default calculation timeout (seconds)
DEFAULT_CALCULATION_TIMEOUT=3600

# PySCF memory limit (MB)
PYSCF_MAX_MEMORY=4000

# PySCF number of threads (0 = auto-detect)
PYSCF_NUM_THREADS=0

# =============================================================================
# GUI Settings
# =============================================================================

# Enable high DPI scaling (true/false)
HIGH_DPI_SCALING=true

# GUI update interval (milliseconds)
GUI_UPDATE_INTERVAL=100

# =============================================================================
# MCP Server Configuration (Optional)
# =============================================================================

# Enable MCP server for Claude Desktop integration (true/false)
MCP_SERVER_ENABLED=false

# MCP server host and port
MCP_SERVER_HOST=localhost
MCP_SERVER_PORT=8000

# =============================================================================
# Development and Testing
# =============================================================================

# Enable development features (true/false)
DEVELOPMENT_MODE=false

# Testing database (separate from main database)
TEST_DB_PATH=:memory:

# Qt testing API
PYTEST_QT_API=pyside6

# =============================================================================
# Logging Configuration
# =============================================================================

# Log file path (leave empty to disable file logging)
LOG_FILE=logs/pyscf_front.log

# Enable console logging (true/false)
LOG_TO_CONSOLE=true