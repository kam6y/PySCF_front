# Database Configuration
DATABASE_URL=mysql+pymysql://pyscf_user:pyscf_password@localhost:3306/pyscf_dev

# PySCF Configuration
PYSCF_TMPDIR=/tmp
OMP_NUM_THREADS=4
PYSCF_MAX_MEMORY=4000
PYSCF_CONV_TOL=1e-9
PYSCF_CONV_TOL_GRAD=1e-6
PYSCF_USE_GPU=false

# gRPC Configuration
GRPC_PORT=50051

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000

# Environment
ENVIRONMENT=development
DEBUG=true

# MCP Server Configuration (Optional)
MCP_SERVER_ENABLED=false
MCP_SERVER_PORT=50053

# Logging
LOG_LEVEL=INFO
LOG_FILE=/var/log/pyscf_front/app.log